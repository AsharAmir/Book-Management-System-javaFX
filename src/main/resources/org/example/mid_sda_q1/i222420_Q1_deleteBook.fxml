<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mid_sda_q1.i222420_Q1_deleteBookController">
    <children>
        <TableView fx:id="booksTable" layoutX="15.0" layoutY="15.0" prefHeight="340.0" prefWidth="570.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="190.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="190.0" text="Author" />
                <TableColumn fx:id="isbnColumn" prefWidth="190.0" text="ISBN" />
            </columns>
        </TableView>
        <HBox spacing="10" layoutX="15.0" layoutY="360.0">
            <children>
                <Button fx:id="deleteButton" text="Delete" disable="true" onAction="#handleDeleteAction"/>  <!-- Ensure you have a method handleDeleteAction in your controller -->
                <!-- Add more buttons here if needed -->
            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
        </HBox>
    </children>
</AnchorPane>
